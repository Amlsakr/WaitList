<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.aml.waitlist.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >
    <EditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/person_name_edit_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:inputType="textCapWords|textPersonName"
        android:hint="@string/guest_name_hint"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/party_count_edit_text"
        android:inputType="number"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:maxLength="2"
        android:contentDescription="@string/party_size_hint"
     />
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/add_button_text"
        android:onClick="addToWaitlist"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/add_to_list_button"
       android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guest_list_recycler_view"/>
</LinearLayout>
